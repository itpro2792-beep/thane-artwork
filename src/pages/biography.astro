<Layout title="Biography | Ann M. Thane" description="The story and accomplishments of Ann M. Thane." image="/images/biography/biography-1.png">
  <StructuredData />
  <Header />
  
  <main class="page-container fade-in">
    <header class="page-header">
      
      <nav aria-label="Breadcrumb" class="breadcrumb" style="text-align: center; margin-bottom: 2rem; font-family: var(--font-mono); font-size: var(--text-xs); text-transform: uppercase; letter-spacing: 1px;">
