<style>
  .page-container {
    padding-top: 120px;
    padding-bottom: 60px;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .page-title {
    font-size: 3rem;
    font-weight: 300;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }
  
  .page-divider {
    height: 2px;
    width: 60px;
    background: var(--color-accent);
    margin: 0 auto;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto 4rem;
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .content-wrapper p {
    margin-bottom: 1.5rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 5%;
  }

  .gallery-item {
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 4px;
    background: var(--color-surface);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }
    .content-wrapper {
      padding: 0 1.5rem;
    }
  }

  /* Typography Enhancements specific to content pages */
  article {
    margin-bottom: 3rem;
  }
  
  .content-wrapper h2 {
    font-size: var(--text-2xl);
    color: var(--accent-terracotta);
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
    text-align: center;
    letter-spacing: 2px;
  }

  .content-wrapper h3 {
    font-size: var(--text-lg);
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .role-desc {
    font-size: var(--text-sm);
    color: var(--accent-sage);
    margin-bottom: 1.5rem;
    font-family: var(--font-mono);
  }

  .intro-block {
    text-align: center;
    margin-bottom: 4rem;
  }

  .lead {
    font-size: var(--text-3xl);
    font-family: var(--font-display);
    color: var(--text-primary);
  }

  .resume-divider {
    height: 1px;
    width: 100px;
    background: var(--border-hover);
    margin: 4rem auto;
  }

  .resume-block {
    margin-bottom: 3rem;
    padding: 2rem;
    background: var(--bg-card);
    border-radius: var(--radius-sm);
    border: 1px solid var(--border);
  }

  .content-wrapper ul {
    list-style-type: none;
    padding: 0;
    margin-bottom: 1.5rem;
  }

  .content-wrapper li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--text-secondary);
  }

  .content-wrapper li::before {
    content: "•";
    color: var(--accent-gold);
    font-size: 1.5rem;
    position: absolute;
    left: 0;
    top: -4px;
    font-family: var(--font-display);
  }
</style>
