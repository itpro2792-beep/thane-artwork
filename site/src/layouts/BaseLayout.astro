---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { 
	title, 
	description = "The official portfolio for artist, explorer, and mom Ann M. Thane. Discover mixed-media illustrations, pyrography, mosaics, and more.",
	image = "/social-preview.png" // Generic social sharing image
} = Astro.props;

const siteUrl = Astro.url.origin;
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO & Metadata -->
		<title>{title} | Ann M. Thane</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalUrl} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content={canonicalUrl}>
		<meta property="og:title" content={`${title} | Ann M. Thane`}>
		<meta property="og:description" content={description}>
		<meta property="og:image" content={new URL(image, siteUrl)}>

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content={canonicalUrl}>
		<meta property="twitter:title" content={`${title} | Ann M. Thane`}>
		<meta property="twitter:description" content={description}>
		<meta property="twitter:image" content={new URL(image, siteUrl)}>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
		
		<style>
			:root {
				--brand: #6a0dad;
				--brand-light: #b19cd9;
				--text-main: #e0e0e0;
				--text-heading: #ffffff;
				--bg-main: #121212;
				--bg-card: #1e1e1e;
				--border-color: #333;
			}
			body {
				font-family: 'Roboto', sans-serif;
				background-color: var(--bg-main);
				color: var(--text-main);
				margin: 0;
				line-height: 1.7;
				opacity: 0;
				animation: fadeIn 0.5s ease-out forwards;
			}

			@keyframes fadeIn {
				to {
					opacity: 1;
				}
			}
			h1, h2, h3 {
				font-family: 'Playfair Display', serif;
				color: var(--text-heading);
				letter-spacing: 0.5px;
			}
			h1 {
				font-size: 3rem;
				color: var(--brand-light);
				text-align: center;
				margin-bottom: 2rem;
			}
			h2 {
				font-size: 2.2rem;
				border-bottom: 2px solid var(--brand);
				padding-bottom: 0.5rem;
				margin-top: 3rem;
			}
			a {
				color: var(--brand-light);
				text-decoration: none;
			}
			a:hover {
				text-decoration: underline;
			}
			.container {
				max-width: 800px;
				margin: 0 auto;
				padding: 2rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="container">
			<slot />
		</main>
		<Footer />
	</body>
</html>
